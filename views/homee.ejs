<%- include("partials/header"); -%>

<div class="xyz">


    <h1>Home</h1>
    <h4> <%= startingContent %> </h4>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
  <%  if(post.url){ %>
    <img class='abc' src="<%=post.url%>" alt="">
<%  } %>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
    <ul class="nav1">

    <li><form action="/edit" method="POST">
        <a href="/edit/<%= post._id %>" class="post-link" ><button type="button" name="edit" value="<%= post.title %>" class="btn btn-secondary">Edit</button></a>
      </form></li>
     <li><form action="/delete" method="post">
       <button class="btn btn-secondary opp" type="submit" name="button" value="<%= post._id %>">Delete</button>
     </form></li>

     </ul>
    <% }) %>

</div>
<%- include("partials/footer"); -%>
